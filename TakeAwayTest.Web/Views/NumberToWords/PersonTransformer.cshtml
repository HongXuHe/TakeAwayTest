@model TakeAwayTest.Web.Models.PersonDto
<div class="row justify-content-md-center">
    
    <div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-action="PersonTransformer" method="post">
            <div class="form-group">
                <label asp-for="Name">Name:</label>
                <input asp-for="Name" class="form-control" placeholder="Please Input Name">
            </div>
            <div class="form-group">
                <label asp-for="Number">Number:</label>
                <input asp-for="Number" class="form-control" placeholder="Please Input Number">
            </div>

            <button type="submit" id="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

</div>